	xmlns:mui="http://firstfloorsoftware.com/ModernUI"
	x:Class="SeismicResponseSpectrum.Ui.TipsWindow"
	x:Name="Window"
	Title="TipsWindow"
	Width="640" Height="480" Background="{x:Null}">

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="35"/>
